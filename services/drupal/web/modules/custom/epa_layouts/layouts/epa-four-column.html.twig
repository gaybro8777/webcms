{% set columns = 0 %}

{% if content.first|render %}
  {% set columns = columns + 1 %}
{% endif %}

{% if content.second|render %}
  {% set columns = columns + 1 %}
{% endif %}

{% if content.third|render %}
  {% set columns = columns + 1 %}
{% endif %}

{% if content.fourth|render %}
  {% set columns = columns + 1 %}
{% endif %}

{% if columns > 1 %}
  <div class="l-grid l-grid--{{ columns }}-col">

    {% if content.first|render %}
      <div>{{ content.first }}</div>
    {% endif %}

    {% if content.second|render %}
      <div>{{ content.second }}</div>
    {% endif %}

    {% if content.third|render %}
      <div>{{ content.third }}</div>
    {% endif %}

    {% if content.fourth|render %}
      <div>{{ content.fourth }}</div>
    {% endif %}

  </div>
{% else %}
  {{ content.first }}
  {{ content.second }}
  {{ content.third }}
  {{ content.fourth }}
{% endif %}
